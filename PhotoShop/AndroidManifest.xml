<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.photoshop"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.photoshop.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.photoshop.ShopActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.photoshop.BasketActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.photoshop.OfferActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.photoshop.SubcategoryActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.photoshop.DetailActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.photoshop.SinglePhotoActivity"
            android:label="@string/app_name"
            android:screenOrientation="landscape" >
        </activity>
    </application>

</manifest>