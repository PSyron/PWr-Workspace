<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:id="@+id/song_iv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="32dp"
        android:src="@drawable/donatan" />

    <LinearLayout
        android:id="@+id/song_ctrls"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/song_iv"
        android:gravity="center_horizontal"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/song_pause"
            android:layout_width="@dimen/music_ctrl_size"
            android:layout_height="@dimen/music_ctrl_size"
            android:background="@drawable/pause" />

        <Button
            android:id="@+id/song_start"
            android:layout_width="@dimen/music_ctrl_size"
            android:layout_height="@dimen/music_ctrl_size"
            android:background="@drawable/play" />

        <Button
            android:id="@+id/song_stop"
            android:layout_width="@dimen/music_ctrl_size"
            android:layout_height="@dimen/music_ctrl_size"
            android:background="@drawable/stop" />
    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/song_ctrls"
        android:layout_centerHorizontal="true"
        android:clickable="true"
        android:padding="8dp"
        android:text="MENU" />

</RelativeLayout>